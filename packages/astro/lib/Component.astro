---
import type { Theme } from '@chisel-ui/core'

export type AstroComponent<T extends Theme> = (props: Props<T>) => string

export interface Props<T extends Theme = Theme> {
	as?: string | AstroComponent<T>
	theme?: T
	id?: string
	class?: string
	style?: string
	[key: string]: any
}

const { as: Tag = 'div', theme, ...props } = Astro.props as Props
---

<Tag {...props}>
	<slot />
</Tag>
