---
import Layout from './Layout.astro'
import type { StackProps } from './types.ts'

const { ...props } = Astro.props as StackProps
---

<Layout data-chisel-stack {...props}>
	<slot />
</Layout>

<style is:global>
	[data-chisel-stack] {
		box-sizing: border-box;
		display: flex;
		flex-direction: column;
		row-gap: var(--gap-block, 0px);
	}
</style>
