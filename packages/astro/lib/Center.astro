---
import { getBreakpointValue, joinStyles } from '@chisel-ui/core'
import './Center.css'
import Component from './Component.astro'
import type { CenterProps } from './types.ts'

const {
	theme = {},
	maxWidth = '100%',
	centerText = false,
	centerContent = false,
	style = '',
	...props
} = Astro.props as CenterProps

const safeMaxWidth = getBreakpointValue(theme, maxWidth)

const attrValue = [centerText && 'text', centerContent && 'content']
	.filter(Boolean)
	.join(' ')

const componentStyle = joinStyles(`--max-width: ${safeMaxWidth}`, style)
---

<Component
	data-chisel-center={attrValue}
	style={componentStyle}
	{theme}
	{...props}
>
	<slot />
</Component>
