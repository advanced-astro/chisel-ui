---
import { getSafeGutter } from '../index.ts'
import Component from './Component.astro'
import type { SpacerProps } from './types.ts'


const {
	gutter = '0px',
	theme = {},
	style = '',
	...props
} = Astro.props as SpacerProps

const safeGutter = getSafeGutter(theme, gutter)
---

<Component style={`--gutter: ${safeGutter};${style}`} {...props}>
	<slot />
</Component>
