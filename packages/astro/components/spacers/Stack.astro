---
import Spacer from '../Spacer.astro'
import type { StackProps } from '../types.ts'

const { ...props } = Astro.props as StackProps
---

<Spacer data-chisel-stack {...props}>
	<slot />
</Spacer>

<style global>
	[data-chisel-stack] {
		box-sizing: border-box;
		display: grid;
		gap: var(--gutter, 0px);
		align-content: start;
	}
	[data-chisel-stack] > * {
		margin: 0;
	}
</style>
