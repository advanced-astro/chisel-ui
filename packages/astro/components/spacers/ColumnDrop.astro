---
import {
	checkIsCSSLength,
	getSizeValue,
} from '../../index.ts'
import Spacer from '../Spacer.astro'
import { Basis, ColumnDropProps } from '../types.ts'

function getSafeBasis<T extends Record<string, unknown>>(
	theme: T,
	basis?: Basis
) {
	if (typeof basis == 'number') {
		return `${basis}px`
	}
	if (checkIsCSSLength(basis as string)) {
		return basis
	}
	return getSizeValue(theme, basis as string)
}

const {
	theme = {},
	basis,
	noStretchedColumns = false,
	style = '',
	...props
} = Astro.props as ColumnDropProps

const safeBasis = getSafeBasis(theme, basis)
---

<Spacer
	data-chisel-column-drop={noStretchedColumns ? 'no-stretched-columns' : ''}
	style={`--basis: ${safeBasis};${style}`}
	{theme}
	{...props}
>
	<slot />
</Spacer>

<style global>
	[data-chisel-column-drop] {
		box-sizing: border-box;
		display: flex;
		flex-wrap: wrap;
		gap: var(--gutter, 0px);
	}
	[data-chisel-column-drop] > * {
		margin: 0;
		flex-basis: var(--basis, 159px);
		flex-grow: 1;
		flex-shrink: 1;
	}
	[data-chisel-column-drop='no-stretched-columns'] > * {
		flex-grow: 0;
	}
</style>
