---
import { getSizeValue } from '../../index.ts'
import Spacer from '../Spacer.astro'
import type { GridProps } from '../types.ts'

const {
	theme = {},
	minItemWidth,
	style = '',
	...props
} = Astro.props as GridProps

const maybeMinItemWidth = getSizeValue(theme, minItemWidth) ?? minItemWidth
---

<Spacer
	data-chisel-grid
	style={`--minItemWidth: ${maybeMinItemWidth};${style}`}
	{theme}
	{...props}
>
	<slot />
</Spacer>

<style global>
	[data-chisel-grid] {
		box-sizing: border-box;
		display: grid;
		gap: var(--gutter, 0px);
		grid-template-columns: repeat(
			auto-fit,
			minmax(min(var(--minItemWidth, 639px), 100%), 1fr)
		);
	}
	[data-chisel-grid] > * {
		margin: 0;
	}
</style>
