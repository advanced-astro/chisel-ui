---
import { Component } from '@chisel-ui/astro'
import { joinClasses } from '@chisel-ui/core'

const {
	as: Tag = 'button',
	hollow = false,
	class: className,
	...props
} = Astro.props

const componentClasses = joinClasses(className, hollow && 'hollow')
---

<Component as={Tag} type="button" class={componentClasses} {...props}>
	<slot />
</Component>

<style>
	.hollow {
		background-color: transparent;
		color: var(--chisel-primary);
		border-color: transparent;
		font-size: var(--chisel-size-500);
		padding-inline-end: 0;
	}
</style>
