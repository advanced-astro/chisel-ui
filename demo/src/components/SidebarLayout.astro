---
import { FullBleed, Inline, Split } from '@chisel-ui/astro'
import { uid } from '@chisel-ui/core'
import Button from './Button.astro'
import Toggle from './Toggle.astro'
import Header from './Header.astro'

const id = uid()

const inlineStyle = `
    @media (max-width: 639px) {
        #${id}:not([active]) [slot="sidebar"] {
            display: none;
        }

        #${id}[active] [slot="content"] {
            display: none;
        }
    }
`
---

<Header targetId={id} />

<Split {id} fraction="auto-start" switchAt="sm">

	<slot name="sidebar" />
	<slot name="content" />
</Split>

<style set:html={inlineStyle}></style>
