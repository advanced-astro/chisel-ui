---
import { Split } from '@chisel-ui/astro'
import { uid } from '@chisel-ui/core'
import Header from './Header.astro'
import ScrollBehavior from './ScrollBehavior.astro'

const id = uid()

const inlineStyle = `
    @media (max-width: 639px) {
        #${id}:not([active]) [slot="sidebar"] {
            display: none;
        }

        #${id}[active] [slot="content"] {
            display: none;
        }
    }
`
---

<ScrollBehavior as={Header} targetId={id} scrolledClass="elevation-medium" />

<Split {id} fraction="auto-start" switchAt="sm">

	<slot name="sidebar" />
	<slot name="content" />
</Split>

<style set:html={inlineStyle}></style>
