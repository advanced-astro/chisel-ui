---
import { AppBoundary, GlobalStyles, Stack } from 'chisel-ui'
import Accordion from '../components/Accordion.astro'
import SidebarLayout from '../components/SidebarLayout.astro'
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Welcome to Chisel UI</title>
		<GlobalStyles opinionated />
	</head>

	<body>
        <SidebarLayout>
            <Stack as="nav" slot="sidebar" gutter="lg">
                <Accordion open>
                    <Fragment slot="summary">Spacers</Fragment>

                    <Stack as="ul" gutter="xs">
                        <li><a href="/spacers/columndrop">ColumnDrop</a></li>
                        <li><a href="/spacers/columns">Columns</a></li>
                        <li><a href="/spacers/grid">Grid</a></li>
                        <li><a href="/spacers/inline">Inline</a></li>
                        <li><a href="/spacers/inlinecluster">InlineCluster</a></li>
                        <li><a href="/spacers/split">Split</a></li>
                        <li><a href="/spacers/stack">Stack</a></li>
                    </Stack>
                </Accordion>

                <Accordion open>
                    <Fragment slot="summary">Wrappers</Fragment>

                    <Stack as="ul" gutter="xs">
                        <li><a href="/wrappers/center">Center</a></li>
                        <li><a href="/wrappers/cover">Cover</a></li>
                        <li><a href="/wrappers/frame">Frame</a></li>
                        <li><a href="/wrappers/padbox">PadBox</a></li>
                    </Stack>
                </Accordion>
            </Stack>

            <AppBoundary as="main" boundarySize="xl">
                <slot />
            </AppBoundary>
        </SidebarLayout>
	</body>
</html>

<style>
    nav {
        padding: 1rem 2rem;
        min-width: 20ch;
    }

    nav ul {
        padding: 0.5rem 0 1rem;
    }
</style>